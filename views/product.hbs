<div>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <div id="bodyWrap">
    <div id="detailWrap">
      <div class="imageWrap">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block mx-auto" alt="..." height="300px" src="{{this.product.IMG1}}" />
            </div>
            <div class="carousel-item">
              <img class="d-block mx-auto" alt="..." height="300px" src="{{this.product.IMG2}}" />
            </div>
            <div class="carousel-item">
              <img class="d-block mx-auto" alt="..." height="300px" src="{{this.product.IMG3}}" />
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
      <div class="productInfoWrap">
        <h4 id="productName">{{this.product.PRO_NAME}}</h4>
        <div id="priceBlock">
          <div id="priceText">
            <h6 class="titleTxt mr-3">Giá hiện tại:</h6>
            <h6 class="titleTxt mr-3" id="priceNow" style="color: red;">
              {{formatCurrency this.product.PRESENT_PRICE}}
            </h6>
          </div>
          <div id="priceText">
            <h6 class="titleTxt mr-3">Giá mua ngay:</h6>
            <h6 class="titleTxt mr-3" id="priceBuy" style="color: red">
              {{formatCurrency this.product.BUY_NOW}}
            </h6>
          </div>
          <div id="priceText">
            <h6 class="titleTxt mr-3">Số lượt ra giá:</h6>
            <h6 class="titleTxt mr-3">
              {{this.product.BID_COUNT}}
            </h6>
          </div>
          <h6 class="titleTxt mt-3">Người ra giá cao nhất:</h6>
          <div id="priceText">
            <h6 class="titleTxt mr-3">{{mask this.bidder.USER_NAME}}</h6>
            <h6 class="titleTxt mr-3" id="priceHighest" style="color: red">
              {{formatCurrency this.product.PRESENT_PRICE}}
            </h6>
          </div>
          <div id="priceText">
            <h6 class="titleTxt mr-3">Đánh giá</h6>
            <div class="titleTxt mr-3">
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star uncheck"></span>
              <span class="fa fa-star uncheck"></span>
            </div>
          </div>
          {{#if this.isUser}}
          <div>
            <form action="/product/{{this.product.PRO_ID}}" method="post">
              <div id="inputGroup">
                <h6>Ra giá:</h6>
                <input type="text" id="price" name="price" placeholder="{{formatCurrency this.recommend}}" />
                {{#if this.isError}}<p>Đã có lỗi xảy ra</p>{{/if}}
              </div>
              <div id="btnGroup">
                <input type="submit" {{#if this.cannotBuy}}disabled="true" {{/if}} value="Ra giá" />
                <input type="submit" {{#if this.cannotBuy}}disabled="true" {{/if}} name="buyNow" value="Mua ngay" />
              </div>
            </form>
          </div>
          {{/if}}
        </div>
      </div>
    </div>
    <div id="sellerBlock">
      <div class="sellerInfoWrap">
        <img class="avaImg" src="{{this.seller.USER_AVA}}" />
        <h6 class="ml-3 mt-3">{{this.seller.USER_NAME}}</h6>
      </div>
      <div class="sellerInfoWrap">
        <h6 class="mt-3 mr-3">Đánh giá</h6>
        <div class="mt-2">
          <span class="fa fa-star checked"></span>
          <span class="fa fa-star checked"></span>
          <span class="fa fa-star checked"></span>
          <span class="fa fa-star uncheck"></span>
          <span class="fa fa-star uncheck"></span>
        </div>
      </div>
    </div>

    <div id="descriptBlock">
      <h5 class="ml-3 mt-3 mb-3">Lịch sử đấu giá của sản phẩm</h5>
      <table class="table table-striped table-condensed">
        <thead>
          <tr>
            <th>Thời điểm</th>
            <th>Người mua</th>
            <th>Giá</th>
          </tr>
        </thead>
        <tbody>
          {{#each this.history}}
          <tr>
            <td>{{moment BID_TIME "MM-DD-YYYY"}}</td>
            <td>{{mask USER_FULLNAME}}</td>
            <td>{{formatCurrency BID_PRICE}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <div id="descriptBlock">
      <div class="descriptTitle">
        <h5>Mô tả sản phẩm</h5>
        <p>Đăng ngày {{moment this.product.PRO_DATE "MM-DD-YYYY"}}</p>
      </div>
      <div>
        <p id="desTxt">
          {{{this.product.DESCRIPTION}}}
        </p>
      </div>
    </div>

    <div id="productBlock">
      <h5 class="ml-3 mt-3 mb-3">Sản phẩm tương tự</h5>
      <div class="card-columns">
        {{#each this.relativeProduct}}

        <div class="card">
          <a href="/product/{{PRO_ID}}">
            <img class="card-img-top align-content-md-center" src={{IMG1}} />
            <div class="card-body">
              <h5 class="card-title">{{PRO_NAME}}</h5>
              <div class="priceBlock">
                <div class="priceTitle">
                  <h6>Giá hiện tại:</h6>
                  <h6 style="color: red">{{formatCurrency PRESENT_PRICE}} </h6>
                </div>
                <div class="priceText">
                  <h6>Giá mua ngay:</h6>
                  <h6 style="color: red">{{formatCurrency BUY_NOW}} </h6>
                </div>
              </div>
              <small class="text-muted text-center">{{moment PRO_DATE "MM-DD-YYYY"}}</small>
            </div>
          </a>
        </div>

        {{/each}}
      </div>
    </div>
  </div>
</div>